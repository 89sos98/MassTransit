<?xml version="1.0" encoding="utf-8" ?>
<project name="masstransit" default="go">
	<property name="nant.settings.currentframework" value="net-3.5" />
	<property name="svn.path" value="http://masstransit.googlecode.com/svn/trunk" overwrite="false" />
	<property name="msbuild.configuration" value="Release" overwrite="false" />
	
	
	<property name="version.rev" value="0" />
	<property name="version.build" value="0" />
	
	
	<property name="dirs.root" value="${directory::get-parent-directory(project::get-base-directory())}" /><!-- solution root -->
	<property name="dirs.build" value="${dirs.root}\bin" /><!-- where the code is compiled to -->
	<property name="dirs.package" value="${dirs.root}\packaged_files" /> <!-- where the code is packaged to -->
	
	<target name="go" depends="common.asminfo, build" description="starting the build" />
	
	<target name="build">
		<nant buildfile=".\compile.step" inheritall="true" />
		<!-- <nant buildfile=".\test.step" inheritall="true" /> -->
		<nant buildfile=".\package.step" inheritall="true" />
	</target>
	
	<target name="common.find-svninfo" description="getting the current svn revision number">
		<!-- try to update the revision -->
		<exec
			program="svn"
			commandline='info ${svn.path} --xml'
			output="_revision.xml"
			failonerror="false"/>
		<xmlpeek
			file="_revision.xml"
			xpath="/info/entry/@revision"
			property="version.rev"
			failonerror="false"/>
		<delete file="_revision.xml" failonerror="false" />
		<echo message="INFO: Using Subversion revision number: ${version.rev}"/>
	</target>
	
	<target name="common.asminfo" depends="common.find-svninfo" description="generating the solutionversion.cs">
		<asminfo output="${dirs.root}\SolutionVersion.cs" language="CSharp">
			<imports>
				<import namespace="System" />
				<import namespace="System.Reflection" />
				<import namespace="System.Runtime.InteropServices" />
			</imports>
			<attributes>
				<attribute type="ComVisibleAttribute" value="false" />
				<attribute type="CLSCompliantAttribute" value="true" />
				<attribute type="AssemblyVersionAttribute" value="0.5.${version.build}.${version.rev}" />
				<attribute type="AssemblyCopyrightAttribute" value="MassTransit Project, original author or authors" />
				<attribute type="AssemblyCompanyAttribute" value="CFT &amp; ACM" />
			</attributes>
		</asminfo>
	</target>
</project>
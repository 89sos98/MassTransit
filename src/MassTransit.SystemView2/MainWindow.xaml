<Window x:Class="MassTransit.SystemView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:MassTransit.SystemView.ViewModel"
        xmlns:Converters="clr-namespace:MassTransit.SystemView.Converters"
        Title="MassTransit System View" Height="300" Width="300"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Converters:MessageNameToTextColorConverter x:Key="messageNameColorConverter" />
    </Window.Resources>
    <Grid>
        <TreeView x:Name="tvSubscriptions">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type ViewModel:Endpoint}" ItemsSource="{Binding Path=Messages}">
                    <TextBlock Text="{Binding Path=EndpointUri}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate DataType="{x:Type ViewModel:Message}">
                            <TextBlock Text="{Binding Path=PrettyMessageName}" Foreground="{Binding Path=MessageName, Converter={StaticResource messageNameColorConverter}}" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>

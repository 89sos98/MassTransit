<?xml version="1.0" encoding="utf-8" ?>
<project name="the test step" default="go">
	<property name="nant.settings.currentframework" value="net-3.5" />
	<property name="tools.ndepend" value="${project::get-base-directory()}\libs\NDepend_2_9_1_2235\" />
	
	<target name="go" depends="run_tests, run_ndepend" description="Testing the build of MassTransit"/>

	<target name="run_tests">
		<exec
			program="${project::get-base-directory()}\libs\nunit\nunit-console.exe"
			commandline='.\tests\MassTransit.ServiceBus.Tests.dll /xml=nunit.xml'
			failonerror="true"/>
	</target>

	<target name="run_ndepend">
        <NDepend NDependConsoleExePath="${tools.ndepend}" 
                 ProjectFilePath=".\masstransit.ndepend.xml"/>
    </target>
</project>